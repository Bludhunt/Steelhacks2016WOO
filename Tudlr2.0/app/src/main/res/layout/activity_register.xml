<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    android:layout_gravity="center_horizontal"
    android:rowCount="8"
    android:columnCount="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="peter.tudlr20.LoginActivity"
    tools:showIn="@layout/activity_register"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:hint="First Name"
        android:ems="10"
        android:id="@+id/editFirstName"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:hint="Last Name"
        android:ems="10"
        android:id="@+id/editLastName"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        android:hint="Username"
        android:ems="10"
        android:id="@+id/editUsername"
        android:layout_row="2"
        android:layout_column="0"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="text"
        android:hint="Pitt Email"
        android:ems="10"
        android:id="@+id/editEmailRegister"
        android:layout_row="3"
        android:layout_column="0"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPasswordRegister"
        android:hint="Password"
        android:layout_row="4"
        android:layout_column="0" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editPasswordRegister2"
        android:hint="Confirm Password"
        android:layout_row="5"
        android:layout_column="0" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_row="6"
        android:layout_column="0"
        android:text="Please enter your information"
        android:id="@+id/registerMessage1"
        android:textSize="18dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="7"
        android:layout_column="0"
        android:text="Continue"
        android:onClick="next"/>


</GridLayout>
